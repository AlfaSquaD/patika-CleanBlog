<!DOCTYPE html>
<html lang="en">

<%- include('partials/_head') -%>

  <!--TODO: Styles does not apply???-->
<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <span class="meta">Posted by
              <a href="#"><%= post.title %> </a>
              on <%= post.dateCreated %> </span>
          </div>
        </div>
      </div>
      <a class="btn btn-primary float-right" href="/post/<%= post._id %>/edit">Update</a>
      <form method="POST" action="/post/<%= post._id %>?_method=DELETE">
        <button type="submit" class="btn btn-primary float-right">Delete</a>
      </form>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= post.detail %> 
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>
  <%- include('partials/_script') -%>

</body>

</html>
